  <section class="comment">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

<div>
    <h2>Ingredients</h2>
    <ul id="ingredientList">
        {{#each this}}
        <li></li>
        {{/each}}
    </ul>
</div>