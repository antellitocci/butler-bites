<div class="recipe-border">
    <div class="row align-items-center justify-content-center">
        <div class="col-12 recipe-title">
            <h1>{{title}}</h1>
        </div>
        <div class="col-12 my-2" style="text-align: center;">
            <h5 style="font-size: clamp(1rem, 1.25rem, 1.5rem);font-family: LeHarve; font-size: 25px;">{{user.username}}
                on {{format_date
                created_at}}</h5>
        </div>
        <div class="col-12" style="text-align: center;">
            <h6 style="font-size: clamp(1rem, 1.25rem, 1.5rem);font-family: LeHarve; font-size: 25px;">Average Rating:
                {{return_avg_rating ratings}}
            </h6>
        </div>
    </div>
</div>

<div class="row justify-content-center my-5">
    <img class="recipe-img" src="{{image}}" alt="{{title}} photo">
</div>

<div class="row justify-content-between">
    <div class="prep-border col-3 ml-5">
        <ul>
            <li>Prep: <span id="prep" class="body-font">{{prep_time}} minutes</span></li>
            <li>Cook: <span id="cook" class="body-font">{{cook_time}} minutes</span></li>
            <li>Serves: <span id="serving" class="body-font">{{serving_size}}</span></li>
        </ul>
    </div>
    <div class="col-6 ingredient-body">
        <div>
            <h2 class="recipe-title">Ingredients</h2>
            <ul class="ml-5 list">
                {{#each ingredients}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>

    </div>
</div>


<div class="recipe-sections row">
    <h2>Directions</h2>
    <p id="directions">{{directions}}</p>
</div>
