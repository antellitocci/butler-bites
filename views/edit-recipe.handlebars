<section>
    <form class="form-heading new-recipe-form">
        <div class="right"><label for="Title" id="title">Title</label>
            <textarea id="titleRecipe" name="title" class="form-input" style="padding: 10px;" required>{{recipe.title}}</textarea>
        </div>

        <div class="right">
            <label class="form-heading" id="mealType" for="meal-type">Choose a meal type</label>
            <!-- Selection of what type of meal the user wants to categorize their recipe -->
            <select class="button form-input" name="categorize" id="categorize" style="margin-left: 20px;">
                <option value="1">Breakfast</option>
                <option value="2">Lunch</option>
                <option value="3">Dinner</option>
                <option value="4">Dessert</option>
            </select>
        </div>


        <div class="split">
            <div class="prep">
                <label class="info-prep" for="prepTime">Prep (min):</label>
                <input type="number" placeholder="{{recipe.prep_time}}" id="prepTime" name="prepTime" class="form-input" required />


                <label class="info-prep" for="cookTime">Cook (min):</label>
                <input type="number" placeholder="{{recipe.cook_time}}" id="cookTime" name="cookTime" class="form-input" required />


                <label class="info-prep" for="yieldAmt">Yield (servings):</label>
                <input type="number" placeholder="{{recipe.serving_size}}" id="yieldAmt" name="yieldAmt" class="form-input" required />
            </div>

            <div class="ingredients-form">
                <label for="ingredients">Ingredients</label>
                <input type="text" placeholder="{{recipe.ingredients}}"
                    id="ingredients" name="ingredients" class="form-input" required />
            </div>
        </div>
        <div class="right direction-block">
            <h2 class="form-heading">Directions</h2>
            <input type="text" placeholder="{{recipe.directions}}" id="directions" name="directions" class="form-input" required />
        </div>

        <section class="space-between">
            <button class="new-recipe-button btn" id="save-recipe" type="submit">Save</button>
            <button class="new-recipe-button btn" id="delete-recipe" type="submit">Delete</button>
        </section>
    </form>

</section>

{{#if loggedIn}}
<script src="/javascript/edit-recipe.js"></script>
<script src="/javascript/delete-recipe.js"></script>
{{/if}}